@model BookModel

@{
    ViewData["Title"] = "Delete " + Model.Name;
}

<div class="row justify-content-center">
    <div class="col-md-4">
        <div class="card" style="background-color: white;">
            <img class="card-img-top" src="@Model.Image" alt="No image">
            <div class="card-body">
                <h4 class="card-title">Delete @Model.Name</h4>

                <table style="border: none;">
                    <tr>
                        <td>Id:</td>
                        <td>@Model.Id</td>
                    </tr>
                    <tr>
                        <td>Name:</td>
                        <td>@Model.Name</td>
                    </tr>
                    <tr>
                        <td>Price:</td>
                        <td>@Model.Price</td>
                    </tr>
                </table>

                @using (@Html.BeginForm("Destroy", "Book", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                }
            </div>
        </div>
    </div>
</div>

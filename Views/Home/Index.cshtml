@model IEnumerable<BookModel>

@{
  Layout = "~/Pages/Shared/_Layout.cshtml";
  ViewData["Title"] = "Home Page";
}

<div class="text-center">
  <h1 class="display-4">Welcome to our Bookstore</h1>
  <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer porta massa urna</p>
</div>

<div class="row mt-5 bg-white">

  @foreach (var item in Model)
  {
    <div class="col-md-3">
      <div class="card">
        <img class="card-img-top" src="@item.Image" alt="">
        <div class="card-body">
          <h4 class="card-title">
            <a style="color: black; text-decoration: none;" asp-action="Details" asp-route-id="@item.Id">@item.Name</a>
          </h4>
          <p class="card-text">@item.Description</p>
          
          <div class="d-flex justify-content-between" style="align-items: center;">
            <strong>Price: $@item.Price</strong>
            <a  class="btn btn-sm btn-outline-primary" asp-action="Details" asp-route-id="@item.Id">View more</a>
          </div>
        </div>
      </div>
    </div>
  }
</div>

